{#
 # Category display
 # ---------------
 # Template for showing a groups of categories entries
 #}

{% extends "_layout" %}
{% set pageTitle = 'assorted writing by bps' %}
{% set description = '' %}
{% set categorySlug = craft.app.request.getSegment(2) %}
{% set category = craft.categories.slug(categorySlug) %}
{% set pageID = categorySlug %}

{% block content %}	
	<h1 class="heading">{{ categorySlug }}</h1>

	{% set entries = craft.entries.section('words').relatedTo(category).find() %}
	{% if entries|length %}
		<ul class="entries">
			{% for entry in entries %}
				{% include '_entrySyndicated' with { 'categorySlug' : categorySlug } %}
			{% endfor %}
		</ul>
	{% endif %}
	</ul>
{% endblock %}